<head>
    <link rel="stylesheet" href="css/registerStyle.css">
</head>

<div class="container">
        <div class="row">
            <div class="col-lg-3"></div>
            <div class="col-lg-6">
                <div id="ui">
                    <h1 class="text-white">Register An Account</h1>
                    <form class="form-group text-center" autocomplete="off" action="/register" method="POST">
                        <div class="row">
                            <div class="col-lg-6">
                                <label>First Name: </label>
                                <input placeholder="Enter First Name" class="form-control" type="text" name="firstName" id="firstName" value="{{account.firstName}}">
                            </div>
                            <div class="col-lg-6">
                                <label>Last Name: </label>
                                <input placeholder="Enter Last Name" class="form-control" type="text" name="lastName" id="lastName" value="{{account.lastName}}">
                            </div>
                        </div>
                        <br>
                        <label>Username</label>
                        <input placeholder="Enter Username" class="form-control" type="text" name="username" id="username" value="{{account.username}}">
                        <br>
                        <div class="row">
                            <div class="col-lg-6">
                                <label>Password: </label>
                                <input placeholder="Enter Password" class="form-control" type="password" name="password" id="password" value="{{account.password}}">
                            </div>
                            <div class="col-lg-6">
                                <label>Retype Password: </label>
                                <input placeholder="Retype Password" class="form-control" type="password" name="repassword" id="repassword">
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-lg-12">
                                <label>Home Address: </label>
                                <input placeholder="Enter Complete Password" class="form-control" type="text" name="address" id="password" value="{{account.address}}">
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-lg-12">
                                <label>Contact Number: </label>
                                <input placeholder="Enter Contact Number" class="form-control" type="number" name="contactNumber" id="password" value="{{account.contactNumber}}">
                            </div>
                        </div>
                        <br>
                        <input class="btn btn-primary btn-block btn-lg" type="submit" name="submit" id="submit" value="Submit">
                        <br>
                        <div class="row">
                            <div class="col-lg-12">
                                <label style="color: red; font-size: 20px">{{message}} </label>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>