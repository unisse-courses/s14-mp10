<head>
    <link rel="stylesheet" href="css/registerStyle.css">
</head>

    <div class="container">
        <div class="row">
            <div class="col-lg-3"></div>
            <div class="col-lg-6">
                <div id="ui">
                    <form class="form-group text-center" action="../html/editprofileView.html">
                        <h2 class="text-white">{{fullName}}</h2>
                        <br>
                        <div class="row">
                            <div class="col-lg-6">
                                <label>First Name: </label>
                                <h5 class="text-white">{{firstName}}</h5>
                            </div>
                            <div class="col-lg-6">
                                <label>Last Name: </label>
                                <h5 class="text-white">{{lastName}}</h5>
                            </div>
                        </div>
                        <br>
                        <label>Complete Address:</label>
                        <h5 class="text-white">{{address}}</h5>
                        <br>
                        <label>Phone Number:</label>
                        <h5 class="text-white">{{contactNumber}}</h5>
                        <br>
                        <input class="btn btn-primary btn-block btn-lg" type="submit" name="submit" id="submit" value="Edit Details?">
                    </form>
                </div>
            </div>
    </div>



