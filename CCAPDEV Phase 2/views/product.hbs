<link rel="stylesheet" href="/CCAPDEV Phase 2/public/css/product.css">

<div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div id="ui">
                    <!-- <img src="https://assets.adidas.com/images/w_600,f_auto,q_auto:sensitive,fl_lossy/985126faac9345fbafa8a8dd008d1a68_9366/Duramo_9_Shoes_Black_BB7066_01_standard.jpg" height="200px" width="250px" alt=""> -->
                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                          <div class="carousel-item active">
                            <img class="d-block w-100" height="500px" src="`{{product.picture1.jpeg}}`" alt="First slide">
                          </div>
                          <div class="carousel-item">
                            <img class="d-block w-100" height="500px" src="{{product.picture2.jpeg}}" alt="Second slide">
                          </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                          <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                          <span class="carousel-control-next-icon" aria-hidden="true"></span>
                          <span class="sr-only">Next</span>
                        </a>
                    </div>
                    <h1 class="text-white">{{product.name}}</h1>
                    <form class="form-group text-center">
                        <br>
                        <div class="row">
                            <div class="col-lg-6">
                                <label>Price: </label>
                                <h5 class="text-white">{{product.price}}</h5>
                            </div>
                            <div class="col-lg-6">
                                <label>Rating: </label>
                                <h5 class="text-white">{{product.rating}}</h5>
                            </div>
                            <div class="col-lg-12">
                                <br>
                                <label>Description: </label>
                                <h5 class="text-white">{{product.description}}</h5>
                            </div>
                        </div>
                        <br>
                        <h3 class="text-white">Comment Section: <button>+</button></h3>
                        {{#each product}}
                        <div class="col-lg-12" id="commentArea">
                            <h6>{{product.commentProfileName}}</h6>
                            <p>{{product.commentProfileText}}</p>
                            <input class="btn btn-primary btn-block btn-lg" type="submit" name="submit" id="editButton" value="Edit">
                        </div>
                        <br>
                        {{/each}}
                    </div>
                        <input class="btn btn-primary btn-block btn-lg" type="submit" name="submit" id="submit" value="Add to cart">
                    </form>
                </div>
            </div>
    </div>