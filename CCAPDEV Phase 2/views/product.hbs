<style>
body{
    background-color: #2c3e50;
}

#nav-search{
    margin-right: 100px;
}

#cat{
    margin-left: 20px;
}

.container{
    margin-top: -400px;
}  

#commentArea{
    background-color: white;
    border-radius: 10px;
}

#checkout{
    margin-left: 30px;
}

#ui{
    background-color: #333333;
    padding: 30px;
    margin-top: 40%;
    border-radius: 10px;
}

#ui label{
    color: #ffffff;
}

#submit{
    background-color: orange;
}

#editButton{
    position: relative;
    width: 50px;
    font-size: 10px;
    background-color: orange;
    margin-right: -400px;
}

#btn {
    background-color: black; 
    border: none; 
    color: white; 
    padding: 12px 16px; 
    font-size: 16px; 
    cursor: pointer; 
}

#itemContainer{
    background-color: #333333;
}

#commentBtn{
    background-color: orange;
    font-size: 20px;
}

#editBtn{
    background-color: orange;
    font-size: 10px;
}

.productPicture{
    display: block;
    margin-left: auto;
    margin-right: auto;
}
</style>
<div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div id="ui">
                    <h1 class="text-white">{{title}}</h1>
                    <img src="/{{imagePath}}" width="300px" height="300px" alt="product picture" class="productPicture">
                    <form class="form-group text-center">
                        <br>
                        <div class="row">
                            <div class="col-lg-6">
                                <label>Price: </label>
                                <h5 class="text-white">{{price}}</h5>
                            </div>
                            <div class="col-lg-6">
                                <label>Rating: </label>
                                <h5 class="text-white">{{rating}}</h5>
                            </div>
                            <div class="col-lg-12">
                                <br>
                                <label>Description: </label>
                                <h5 class="text-white">{{description}}</h5>
                            </div>
                            <a href="/home/add-to-cart/{{_id}}" type="button" class="btn btn-secondary" title="Add to Cart"><span class="fa fa-shopping-cart"></span> Add to Cart</a>
                        </div>
                        <br>
                        <h3 class="text-white">Comment Section: <a href="/addProduct/addComment/{{this._id}}" type="button" class="btn btn-primary" placeholder="Add A Comment" id="commentBtn"><i class="fa fa-plus"></i></a></h3>
                        {{#if comments}}
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-md-offset-3 col-sm-offset-3">
                                <ul class="list-group-item" id="itemContainer">
                                    {{#each comments}}
                                    <li class="list-group-item" id="itemContainer" style="border-color: white">
                                        <div class="row">
                                            <div class="col-lg-1"></div>
                                            <div class="col-lg-10">
                                                <h6 style="color: white; text-align: center">{{this.commentAccount}}</h6>
                                            </div>
                                            <div class="col-lg-1"></div>
                                            <div class="col-lg-1"></div>
                                            <div class="col-lg-10"> 
                                                <h5 style="color: white;">{{this.commentContent}}</h5>
                                            </div>
                                            <div class="col-lg-1">
                                                <a href="/addProduct/editComment/{{this._id}}" type="button" class="btn btn-primary btn-sm" placeholder="Add A Comment"  id="editBtn"><i class="fa fa-pencil"></i></a>
                                            </div>
                                        </div>
                                    </li>
                                    {{/each}}
                                </ul>
                            </div>
                        </div>
                        {{else}}
                        <ul class="list-group-item" id="itemContainer">
                            <li class="list-group-item" id="itemContainer" style="border-color: white">
                            <div class="row">
                                <div class="col-lg-1"></div>
                                    <div class="col-lg-10">
                                        <h5 style="color: white;">No Comments Have Been Posted For This Product</h5>
                                    </div>
                                <div class="col-lg-1"></div>
                            </div>
                            </li>
                        </ul>
                        {{/if}}
                    <br>
                    </div>
                    </form>
                </div>
            </div>
    </div>