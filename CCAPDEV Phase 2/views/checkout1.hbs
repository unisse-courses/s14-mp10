<div class="container">
            <div class="col-lg-12">
                <div id="ui">
                    <h1 class="text-white">Checking Out</h1>
                    <form class="form-group text-center" action="/checkout2">
                    <br>
                        <div class="row">
                            <div class="col-lg-6">
                                <label>Fullname: </label>
                                <h5 class="text-white">{{fullName}}</h5>
                            </div>
                            <div class="col-lg-6">
                                <label>Credit Card Number: </label>
                                <input placeholder="Enter Credit Card Information" class="form-control" type="text" name="fname" id="fname">
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-lg-6">
                                <label>Address: </label>
                                <h5 class="text-white">{{address}}</h5>
                            </div>
                            <div class="col-lg-6">
                                <label>Expiration Date: </label>
                                <input placeholder="Enter Expiration Date Here" class="form-control" type="text" name="fname" id="fname">
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-lg-6">
                                <label>Phone Number: </label>
                                <h5 class="text-white">{{contactNumber}}</h5>
                            </div>
                            <div class="col-lg-6">
                                <label>CVV: </label>
                                <input placeholder="Enter The CVV Of Your Card" class="form-control" type="text" name="fname" id="fname">
                            </div>
                        </div>
                        <br>
                        <br>
                        {{#if products}}
<div class="row">
    <div class="col-sm-12 col-md-12 col-md-offset-3 col-sm-offset-3">
        <ul class="list-group-item" id="itemContainer">
            {{#each products}}
                <li class="list-group-item" id="itemContainer" style="border-color: white;">  
                    <div class="row">
                        <div class="col-lg-3">
                            <label>Quantity</label>
                            <h5>{{this.qty}}</h5>
                        </div>
                        <div class="col-lg-3">
                            <label>Product Name</label>
                            <h5>{{this.item.title}}</h5>
                        </div>
                        <div class="col-lg-3">
                            <label>Price</label>
                            <h5>PHP {{this.item.price}}</h5>
                        </div>   
                        <div class="col-lg-3">
                            <button class="btn btn-primary btn-xs dropdown-toggle" id="actionButton" data-toggle="dropdown" type="button">Action <span class="caret"></span></button>
                            <ul class="dropdown-menu">
                                    <li><a href="/addProduct/add/{{this.item._id}}">Add by 1</a></li>
                                    <li><a href="/addProduct/reduce/{{this.item._id}}">Reduce by 1</a></li>
                                    <li><a href="/addProduct/removeAll/{{this.item._id}}">Remove All</a></li>
                            </ul>
                        </div>
                    </div>
                </li>
            {{/each}}
        </ul>
    </div>
</div>
{{else}}
{{/if}}
                    </form>
                    <a href="#" type="button" class="btn btn-primary btn-block btn-lg" style="background-color: orange;" id="button">Checkout</a>
                    <div class="bg-modal">
                        <div class="modal-contents">
                            <h5 style="color: white;" id="modal">Thank you for your purchase</h5>
                            <a href="/home/removeAll" type="button" class="btn btn-primary btn-block btn-lg" id="modalButton">Proceed</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

