    background-color: #333333;
}

li{
    color: white;
}

h4{
    color: white;
}

#actionButton{
    background-color: orange;
    margin-top: 7%;
}

.bg-modal {
	background-color: rgba(0, 0, 0, 0.8);
    margin-left: -50px;
	width: 100%;
	height: 100%;
	position: absolute;
	top: 0;
	display: none;
	justify-content: center;
	align-items: center;
}
.modal-contents {
	height: 300px;
	width: 500px;
	background-color: #2c3e50;
	text-align: center;
	padding: 20px;
	position: relative;
	border-radius: 4px;
}

#modal{
    margin: 30px 30px;
	display: block;
	width: 80%;
	padding: 20px;
