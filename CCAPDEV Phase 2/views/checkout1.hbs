<link rel="stylesheet" href="css/checkout2.css">

<style>
    body{
    background-color: #2c3e50;
}

#nav-search{
    margin-right: 100px;
}

.container{
     margin-top: -350px;
}

#cat{
    margin-left: 20px;
}

#checkout{
    margin-left: 30px;
}

#ui{
    background-color: #333333;
    padding: 30px;
    margin-top: 40%;
    border-radius: 10px;
}

#ui label{
    color: #ffffff;
}

#submit{
    background-color: orange;
}

#itemContainer{
    background-color: #333333;
}

li{
    color: white;
}

h4{
    color: white;
}

#actionButton{
    background-color: orange;
    margin-top: 7%;
}

</style>

<div class="container">
            <div class="col-lg-12">
                <div id="ui">
                    <h1 class="text-white">Checking Out</h1>
                    <form class="form-group text-center" action="/checkout2">
                    <br>
                        <div class="row">
                            <div class="col-lg-6">
                                <label>Fullname: </label>
                                <h5 class="text-white">{{fullName}}</h5>
                            </div>
                            <div class="col-lg-6">
                                <label>Credit Card Number: </label>
                                <input placeholder="Enter Credit Card Information" class="form-control" type="text" name="fname" id="fname">
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-lg-6">
                                <label>Address: </label>
                                <h5 class="text-white">{{address}}</h5>
                            </div>
                            <div class="col-lg-6">
                                <label>Expiration Date: </label>
                                <input placeholder="Enter Expiration Date Here" class="form-control" type="text" name="fname" id="fname">
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-lg-6">
                                <label>Phone Number: </label>
                                <h5 class="text-white">{{contactNumber}}</h5>
                            </div>
                            <div class="col-lg-6">
                                <label>CVV: </label>
                                <input placeholder="Enter The CVV Of Your Card" class="form-control" type="text" name="fname" id="fname">
                            </div>
                        </div>
                        <br>
                        <br>
                        {{#if products}}
<div class="row">
    <div class="col-sm-12 col-md-12 col-md-offset-3 col-sm-offset-3">
        <ul class="list-group-item" id="itemContainer">
            {{#each products}}
                <li class="list-group-item" id="itemContainer" style="border-color: white;">  
                    <div class="row">
                        <div class="col-lg-3">
                            <label>Quantity</label>
                            <h5>{{this.qty}}</h5>
                        </div>
                        <div class="col-lg-3">
                            <label>Product Name</label>
                            <h5>{{this.item.title}}</h5>
                        </div>
                        <div class="col-lg-3">
                            <label>Price</label>
                            <h5>PHP {{this.item.price}}</h5>
                        </div>   
                        <div class="col-lg-3">
                            <button class="btn btn-primary btn-xs dropdown-toggle" id="actionButton" data-toggle="dropdown" type="button">Action <span class="caret"></span></button>
                            <ul class="dropdown-menu">
                                    <li><a href="/home/add/{{this.item._id}}">Add by 1</a></li>
                                    <li><a href="/home/reduce/{{this.item._id}}">Reduce by 1</a></li>
                                    <li><a href="/home/remove/{{this.item._id}}">Remove All</a></li>
                            </ul>
                        </div>
                    </div>
                </li>
            {{/each}}
        </ul>
    </div>
</div>
{{else}}
{{/if}}
                    </form>
                    <form id="submitStyle"><button class="btn btn-primary btn-block btn-lg" id="submit">Confirm Purchase!</button></form>
                </div>
            </div>
        </div>