<link rel="stylesheet" href="css/checkout2.css">

<style>
    body{
    background-color: #2c3e50;
}

#ui{
    background-color: #333333;
    padding: 30px;
    border-radius: 10px;
}

#ui label{
    color: #ffffff;
}

#submit{
    background-color: orange;
}

h4{
    color: white;
}

</style>

<div class="container">
            <div class="col-lg-12">
                <div id="ui">
                    <h1 class="text-white">Checking Out</h1>
                    <form class="form-group text-center" action="/checkout2">
                    <br>
                        <div class="row">
                            <div class="col-lg-6">
                                <label>Fullname: </label>
                                <h5 class="text-white">{{fullName}}</h5>
                            </div>
                            <div class="col-lg-6">
                                <label>Credit Card Number: </label>
                                <input placeholder="Enter Credit Card Information" class="form-control" type="text" name="fname" id="fname">
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-lg-6">
                                <label>Address: </label>
                                <h5 class="text-white">{{address}}</h5>
                            </div>
                            <div class="col-lg-6">
                                <label>Expiration Date: </label>
                                <input placeholder="Enter Expiration Date Here" class="form-control" type="text" name="fname" id="fname">
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-lg-6">
                                <label>Phone Number: </label>
                                <h5 class="text-white">{{contactNumber}}</h5>
                            </div>
                            <div class="col-lg-6">
                                <label>CVV: </label>
                                <input placeholder="Enter The CVV Of Your Card" class="form-control" type="text" name="fname" id="fname">
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            
                        </div>
                    </form>
                    <div class="row">
                        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
                            <ul class="list-group-item">
                                {{#each products}}
                                    <li class="list-group-item">
                                        <span class="badge">Qty: ({{this.qty}})</span>
                                        <strong>{{this.item.title}}</strong>
                                        <span class="label label-success">Php {{this.item.price}}</span>
                                        <div class="btn-group">
                                            <button class="btn btn-primary btn-xs dropdown-toggle" data-toggle="dropdown" type="button">Action <span class="caret"></span></button>
                                            <ul class="dropdown-menu">
                                                <li><a href="/home/reduce/{{this.item._id}}">Reduce by 1</a></li>
                                                <li><a href="/home/remove/{{this.item._id}}">Remove All</a></li>
                                            </ul>
                                        </div>
                                    </li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <form action="checkoutView2.html" id="submitStyle"><a class="btn btn-primary btn-block btn-lg" href="/home/removeAll" id="submit">Buy</a></form>
                    </div>
                </div>
            </div>
        </div>