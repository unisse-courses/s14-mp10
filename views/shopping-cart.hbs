
<style>
body{
    background-color: #2c3e50;
}

#nav-search{
    margin-right: 100px;
}

.container{
     margin-top: 120px;
}

#cat{
    margin-left: 20px;
}

#checkout{
    margin-left: 30px;
}

#ui{
    background-color: #333333;
    padding: 30px;
    margin-top: 40%;
    border-radius: 10px;
    color: white;
}

#ui label{
    color: #ffffff;
}

#submit{
    background-color: orange;
}

#itemContainer{
    background-color: #333333;
}

li{
    color: white;
}

h4{
    color: white;
}

#actionButton{
    background-color: orange;
    margin-top: 7%;
}


</style>


<div class="container">
{{#if products}}
<div class="row">
    <div class="col-sm-12 col-md-12 col-md-offset-3 col-sm-offset-3">
        <ul class="list-group-item" id="itemContainer">
            {{#each products}}
                <li class="list-group-item" id="itemContainer" style="border-color: white;">
                    <div class="row">
                        <div class="col-lg-3">
                            <label>Quantity</label>
                            <h5>{{this.qty}}</h5>
                        </div>
                        <div class="col-lg-3">
                            <label>Product Name</label>
                            <h5>{{this.item.title}}</h5>
                        </div>
                        <div class="col-lg-3">
                            <label>Price</label>
                            <h5>PHP {{this.item.price}}</h5>
                        </div>   
                        <div class="col-lg-3">
                            <button class="btn btn-primary btn-xs dropdown-toggle" id="actionButton" data-toggle="dropdown" type="button">Action <span class="caret"></span></button>
                            <ul class="dropdown-menu">
                                    <li><a href="/home/add/{{this.item._id}}">Add by 1</a></li>
                                    <li><a href="/home/reduce/{{this.item._id}}">Reduce by 1</a></li>
                                    <li><a href="/home/remove/{{this.item._id}}">Remove All</a></li>
                            </ul>
                        </div>
                    </div>
                </li>
            {{/each}}
        </ul>
    </div>
</div>

<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3" style="color: white;">
        <strong>Total Price: Php {{totalPrice}}</strong>
    </div>
</div>
<hr>
<div class="row">
        <div class="col-lg-4"></div>
        <div class="col-lg-4">
            <a href="/home/checkout" type="button" class="btn btn-primary btn-block btn-lg" style="background-color: orange;" id="checkoutButton">Checkout</a>
        </div>
        <div class="col-lg-4"></div>
</div>
{{else}}
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <h2 style="color: white;">No Items in Cart</h2>
    </div>
</div>
{{/if}}
</div>
