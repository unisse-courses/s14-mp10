<link rel="stylesheet" href="css/checkout2.css">

<style>
    body{
    background-color: #2c3e50;
}

#nav-search{
    margin-right: 100px;
}

.container{
     margin-top: -350px;
}

#cat{
    margin-left: 20px;
}

#checkout{
    margin-left: 30px;
}

#ui{
    background-color: #333333;
    padding: 30px;
    margin-top: 40%;
    border-radius: 10px;
}

#ui label{
    color: #ffffff;
}

#submit{
    background-color: orange;
}

#itemContainer{
    background-color: #333333;
}

li{
    color: white;
}

h4{
    color: white;
}

#actionButton{
    background-color: orange;
    margin-top: 7%;
}

.bg-modal {
	background-color: rgba(0, 0, 0, 0.8);
    margin-left: -50px;
	width: 100%;
	height: 100%;
	position: absolute;
	top: 0;
	display: none;
	justify-content: center;
	align-items: center;
}
.modal-contents {
	height: 300px;
	width: 500px;
	background-color: #2c3e50;
	text-align: center;
	padding: 20px;
	position: relative;
	border-radius: 4px;
}

#modal{
    margin: 30px 30px;
	display: block;
	width: 80%;
	padding: 20px;
    text-align: center;
}

#modalButton{
    background-color: orange;
    margin-top: 50px;
} 

</style>

<div class="container">
            <div class="col-lg-12">
                <div id="ui">
                    <h1 class="text-white">Checking Out</h1>
                    <form class="form-group text-center" autocomplete="off" action="/home/removeAllCheckout" method="POST">
                    <br>
                        <div class="row">
                            <div class="col-lg-6">
                                <label>Fullname: </label>
                                <h5 class="text-white">{{firstName}} {{lastName}}</h5>
                            </div>
                            <div class="col-lg-6">
                                <label>Credit Card Number: </label>
                                <input placeholder="Enter The 12 Digit Credit Card Number" class="form-control" name="creditCard"  type="number">
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-lg-6">
                                <label>Address: </label>
                                <h5 class="text-white">{{address}}</h5>
                            </div>
                            <div class="col-lg-6">
                                <label>Expiration Date </label>
                                <input placeholder="Enter Expiration Date Here" class="form-control" name="date" type="month" min="2020-04">
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-lg-6">
                                <label>Phone Number: </label>
                                <h5 class="text-white">{{contactNumber}}</h5>
                            </div>
                            <div class="col-lg-6">
                                <label>CVV: </label>
                                <input placeholder="Enter The 3 Digit CVV Of Your Card" class="form-control" name="cvv" type="number">
                            </div>
                        </div>
                        <br>
                        <br>
                        {{#if products}}
<div class="row">
    <div class="col-sm-12 col-md-12 col-md-offset-3 col-sm-offset-3">
        <ul class="list-group-item" id="itemContainer">
            {{#each products}}
                <li class="list-group-item" id="itemContainer" style="border-color: white;">  
                    <div class="row">
                        <div class="col-lg-3">
                            <label>Quantity</label>
                            <h5>{{this.qty}}</h5>
                        </div>
                        <div class="col-lg-3">
                            <label>Product Name</label>
                            <h5>{{this.item.title}}</h5>
                        </div>
                        <div class="col-lg-3">
                            <label>Price</label>
                            <h5>PHP {{this.item.price}}</h5>
                        </div>   
                        <div class="col-lg-3">
                            <button class="btn btn-primary btn-xs dropdown-toggle" id="actionButton" data-toggle="dropdown" type="button">Action <span class="caret"></span></button>
                            <ul class="dropdown-menu">
                                    <li><a href="/addProduct/add/{{this.item._id}}">Add by 1</a></li>
                                    <li><a href="/addProduct/reduce/{{this.item._id}}">Reduce by 1</a></li>
                                    <li><a href="/addProduct/remove/{{this.item._id}}">Remove All</a></li>
                            </ul>
                        </div>
                    </div>
                </li>
            {{/each}}
        </ul>
    </div>
</div>
{{else}}
{{/if}}
                    <input class="btn btn-primary btn-block btn-lg" type="submit" name="submit" id="submit" value="Submit">
                    <div class="error" style="color: red; font-size: 20px;">    
                        {{message}}
                    </div>
                    </form>
                    {{!-- <a href="/home/removeAll" type="button" class="btn btn-primary btn-block btn-lg" style="background-color: orange;" id="button">Checkout</a> --}}
                    
                </div>
            </div>
        </div>
