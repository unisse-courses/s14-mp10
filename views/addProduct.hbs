<style>
body{
    background-color: #2c3e50;
}

#nav-search{
    margin-right: 100px;
}

#cat{
    margin-left: 20px;
}

#checkout{
    margin-left: 30px;
}

#ui{
    background-color: #333333;
    padding: 30px;
    margin-top: 35%;
    border-radius: 10px;
}

#ui label{
    color: #ffffff;
}

#submit{
    background-color: orange;
}

body{
    background-color: #2c3e50;
}

input[type=number]::-webkit-inner-spin-button, 
input[type=number]::-webkit-outer-spin-button { 
  -webkit-appearance: none; 
  margin: 0; 
}
</style>

<div class="container">
            <div class="row">
                <div class="col-lg-3"></div>
                <div class="col-lg-6">
                    <div id="ui">
                        <h1 class="text-white">Add a Product</h1>
                        <form class="form-group text-center" action="/addProduct" method="POST" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-lg-6">
                                    <label>Product Name: </label>
                                    <input placeholder="Enter Product Name" class="form-control" type="text" name="productName" id="fname">
                                </div>
                                <div class="col-lg-6">
                                    <label>Price: </label>
                                    <input placeholder="Enter Price" class="form-control" type="text" name="price" id="lname">
                                </div>
                            </div>
                            <br>
                            <label>Product Description:</label>
                            <input placeholder="Enter Product Description" class="form-control" type="text" name="description" id="username">
                            <br>
                            <label>Add Photo:</label>
                            <br>
                            <input class="form-control" type="file" name="file" id="picture">
                            <br>
                            <br>
                            <input class="btn btn-primary btn-block btn-lg" type="submit" name="filename" id="submit" value="Submit">
                            <br>
                            <div class="error" style="color: red; font-size: 20px;">    
                                {{message}}
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>